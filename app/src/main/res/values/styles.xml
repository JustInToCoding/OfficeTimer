<resources>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sub_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="sub_text_2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="timer_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="button">
        <item name="android:height">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="small_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="list_header">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="list_item">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="list_item_sub">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="list_item_check">
        <item name="android:padding">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:theme">@style/CheckBoxAppTheme</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
