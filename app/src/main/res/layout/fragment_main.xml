<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="7"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/bSetting"
            style="@style/small_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_settings_white_36dp" />

        <ImageButton
            android:id="@+id/bInfo"
            style="@style/small_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bSetting"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_help_white_36dp" />

        <ImageButton
            android:id="@+id/bUpgrade"
            style="@style/small_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="start"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_upward_white_36dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/motivationText"
        style="@style/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" />

    <nl.mranderson.sittingapp.custom.CircularSeekBar
        android:id="@+id/seekBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/timeText"
        style="@style/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:text="05:00" />

    <Button
        android:id="@+id/bStart"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Start" />

</LinearLayout>